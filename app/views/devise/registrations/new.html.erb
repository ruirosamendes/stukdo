

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"} ) do |f| %>
  
  <%= f.error_notification %>
  <h2 class="text-center">Sign up</h2>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email' %>
    <%= f.input :password, required: true, label: false, placeholder: 'Password', hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


